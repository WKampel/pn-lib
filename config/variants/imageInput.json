{
  "base": {
    "@disabled": {
      "backgroundColor": "$image-input-base-color-background-disabled"
    },
    "@focused": {
      "borderColor": "$image-input-base-color-border-focused"
    },
    "@hovered": {
      "borderColor": "$image-input-base-color-border-hovered"
    },
    "alignItems": "center",
    "borderColor": "$image-input-base-color-border",
    "borderRadius": "$image-input-base-radius",
    "borderStyle": "dashed",
    "borderWidth": 2,
    "height": "$image-input-base-size",
    "imageStyle": {
      "height": "100%",
      "width": "100%"
    },
    "justifyContent": "center",
    "labelContainerStyle": {
      "alingItems": "center",
      "backgroundColor": "black",
      "flexDirection": "row",
      "gap": 10,
      "left": 0,
      "opacity": 0.75,
      "padding": 10,
      "pointerEvents": "none",
      "position": "absolute",
      "top": 0
    },
    "labelStyle": {
      "color": "white",
      "fontSize": 15
    },
    "outline": "none",
    "padding": 10,
    "width": "$image-input-base-size"
  }
}
