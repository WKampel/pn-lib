{
  "base": {
    "backgroundColor": "$card-base-color-background",
    "borderColor": "$color-border-on-surface",
    "borderRadius": "$card-base-radius",
    "borderWidth": 1,
    "cursor": "pointer",
    "padding": "$card-base-spacing-padding"
  },
  "interactive": {
    "@hovered": {
      "opacity": 0.85
    },
    "@pressed": {
      "opacity": 0.7
    }
  }
}
