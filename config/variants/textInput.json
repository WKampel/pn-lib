{
  "base": {
    "@disabled": {
      "backgroundColor": "$text-input-base-color-background-disabled"
    },
    "@focused": {
      "borderColor": "$text-input-base-color-border-focused"
    },
    "@hovered": {
      "borderColor": "$text-input-base-color-border-hovered"
    },
    "borderColor": "$text-input-base-color-border",
    "borderRadius": "$text-input-base-radius",
    "borderWidth": 1,
    "height": "$text-input-base-size-height",
    "inputStyle": {
      "outline": "none"
    },
    "justifyContent": "center",
    "paddingHorizontal": "$text-input-base-spacing-padding-horizontal"
  },
  "s": {
    "height": "$text-input-s-size-height",
    "inputStyle": {
      "fontSize": "$text-input-s-font-size"
    }
  }
}
