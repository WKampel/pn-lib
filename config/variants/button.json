{
  "base": {
    "@disabled": {
      "opacity": "$button-base-opacity-background-disabled"
    },
    "@hovered": {
      "opacity": "$button-base-opacity-background-hovered"
    },
    "@pressed": {
      "opacity": "$button-base-opacity-background-pressed"
    },
    "alignItems": "center",
    "backgroundColor": "$button-base-color-background",
    "borderRadius": "$button-base-radius",
    "color": "$button-base-color-text",
    "flexDirection": "row",
    "height": "$button-base-size-height",
    "justifyContent": "center",
    "paddingHorizontal": "$button-base-spacing-padding-horizontal"
  },
  "icon": {
    "backgroundColor": "transparent",
    "fontSize": 20,
    "height": "auto",
    "paddingHorizontal": 0
  },
  "icon": {
    "backgroundColor": "transparent",
    "fontSize": 20,
    "height": "auto",
    "paddingHorizontal": 0
  },
  "secondary": {
    "backgroundColor": "$button-secondary-color-background",
    "borderColor": "$button-secondary-color-border",
    "borderWidth": 2,
    "color": "$button-secondary-color-text",
    "fontWeight": "$button-secondary-weight-text"
  },
  "small": {
    "height": "$button-small-size-height"
  }
}
