{
  "base": {
    "@disabled": {
      "backgroundColor": "$editor-base-color-background-disabled"
    },
    "@focused": {
      "borderColor": "$editor-base-color-border-focused"
    },
    "@hovered": {
      "borderColor": "$editor-base-color-border-hovered"
    },
    "borderColor": "$editor-base-color-border",
    "borderRadius": "$editor-base-radius",
    "borderWidth": 1,
    "overflow": "hidden",
    "paddingHorizontal": "$editor-base-spacing-padding-horizontal"
  }
}
